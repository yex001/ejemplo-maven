pipeline {
  agent any
  stages { 
    stage("Check Maven in PATH") {
      steps {
        node {
          // Puedes especificar un label o el nombre de un agente específico aquí
          script {
            sh 'echo $PATH'
          }
        }
      }
    }
    stage("build & sonarqube") {
      steps {
        script {
          withSonarQubeEnv('SonarQube_server') {
            sh 'mvn clean package sonar:sonar'
          }
        }
      }
    }
  }
}
